<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_button">
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@drawable/style_button</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="style_popup_button">
        <item name="android:background">@drawable/style_popup_button</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="style_popup_menu">
        <item name="android:background">@drawable/style_popup_menu</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>